<% layout("/layouts/boilerplate.ejs")-%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h1 class="mt-4">Edit the Listings</h1>
            <form class="needs-validation" novalidate method="post" action="/listings/<%=listings._id%>?_method=PUT" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text"  name="listing[title]" class="form-control" value="<%=listings.title%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please choose a Title.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" rows="2" class="form-control" id="" ><%=listings.description%></textarea>
                    <!-- <div class="invalid-feedback">
                        Please enter a Description.
                    </div> -->
                </div>  
                <div class="mb-3">
                    <p>Original Image</p>
                    <img src="<%=originalImageUrl%>" alt="Listing-Image">
                </div>
                <div class="mb-3">
                    <!-- <label for="image" class="form-label">Image</label> -->
                    <input type="file"  name="listing[image]" class="form-control">
                </div>  
                <!-- <div class="mb-4">
                    <label for="image" class="form-label">Upload Image</label>
                    <input type="file" name="listing[image]" class="form-control" required>
                </div> -->
                <div class="row">
                    <div class="mb-3 col-12 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input  name="listing[price]" placeholder="Update Image" class="form-control" value="<%=listings.price%>" required>
                        <div class="invalid-feedback">
                            Please enter a Price.
                        </div>
                    </div> 
                    <div class="mb-3 col-12 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" class="form-control" value="<%=listings.location%>" required>
                        <div class="invalid-feedback">
                            Please enter a Location.
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" class="form-control" value="<%=listings.country%>" required>
                    <div class="invalid-feedback">
                        Please enter a Country.
                    </div><br><br>
                </div>        
                <div >
                    <button class=" submit btn btn-danger ">Submit</button>
                </div>
            </form>
        </div>
    </div>
   
</body>
